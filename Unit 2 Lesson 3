triangular_number = 0

for n in range(1, 7):
    triangular_number += n
    # Determine the suffix for the current number
    if n == 1:
        suffix = "st"
    elif n == 2:
        suffix = "nd"
    elif n == 3:
        suffix = "rd"
    else:
        suffix = "th"
    
    print(f"The {n}{suffix} triangular number is {triangular_number}")
