import math

def factorize(N):
    return [j for j in range(1, math.isqrt(N) + 1) if N % j == 0 and j != N] + \
           [N // j for j in range(1, math.isqrt(N) + 1) if N % j == 0 and j != 1 and N // j != N]

def classify_number(N):
    factors = factorize(N)
    factor_sum = sum(factors)
    return factor_sum, "deficient" if factor_sum < N else "perfect" if factor_sum == N else "abundant"

def main():
    while True:
        N = int(input("Please input a number: "))
        if N < 0:
            print("Goodbye!")
            break
        factor_sum, classification = classify_number(N)
        print(f"Factor sum: {factor_sum}\n{N} is {classification}")

if __name__ == "__main__":
    main()
