ar2 = [[3, 4, 1, 2, 6],
       [9, 2, 3, 7, 5],
       [4, 2, 1, 0, 3]]

sums = []  # Initialize an empty list to store sums

for i in range(len(ar2)):
    row_sum = sum(ar2[i])  # Calculate the sum of the current row
    sums.append(row_sum)    # Append the sum to the sums list

# Now, sums should contain the sums of each row
print(sums)  # This should output: [16, 26, 10]
