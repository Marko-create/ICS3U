# Accept the number of items from the user
num_items = int(input("How many items are you entering? "))

# Initialize an empty list to store the items
items = []

# Loop to accept each item from the user
print("Enter your items now:")
for _ in range(num_items):
    item = input("Next item: ")
    items.append(item)

# Output the number of items and the items themselves
print(f"You have entered {len(items)} items.")
for item in items:
    print(item)
