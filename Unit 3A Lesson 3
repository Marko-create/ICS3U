items = ["Apples", "Bananas", "Cherries", "Dosa"]
sizes = []

# First loop to calculate sizes
for i in range(len(items)):
    sizeI = len(items[i])
    sizes.append(sizeI)

# Second loop to print sizes and items
for i in range(len(sizes)):
    print("%d %s" % (sizes[i], items[i]))

# New loop to check if sizes match the lengths of items
match_results = []
for i in range(len(sizes)):
    match = sizes[i] == len(items[i])
    match_results.append(match)

# Print match results
for i in range(len(match_results)):
    print("Does the size of '%s' match? %s" % (items[i], match_results[i]))
